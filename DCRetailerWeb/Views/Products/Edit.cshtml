@model DCRetailerWeb.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MRP" class="control-label"></label>
                <input asp-for="MRP" class="form-control" />
                <span asp-validation-for="MRP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SP" class="control-label"></label>
                <input asp-for="SP" class="form-control" />
                <span asp-validation-for="SP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfferDescription" class="control-label"></label>
                <input asp-for="OfferDescription" class="form-control" />
                <span asp-validation-for="OfferDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsOnOffer" /> @Html.DisplayNameFor(model => model.IsOnOffer)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"></label>
                <input asp-for="ProductImage" class="form-control" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
